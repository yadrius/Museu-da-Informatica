            @Html.DisplayFor(modelItem => item.marca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.modelo)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.memoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ano_fabricacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.diponibilidade_venda)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.diponibilidade_visual)
        </td>
        <td>
